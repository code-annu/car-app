<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="./output.css" rel="stylesheet" />
    <title>Add car</title>
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <form
      action="/add-car"
      method="post"
      class="bg-white shadow-md rounded-lg p-6 w-full max-w-md mx-auto my-4"
    >
      <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">
        Add Car Details
      </h2>

      <!-- Brand Name -->
      <div class="mb-4">
        <label for="brand" class="block text-gray-700 font-medium mb-2"
          >Brand Name</label
        >
        <input
          type="text"
          id="brand"
          name="brand"
          placeholder="e.g., Toyota"
          class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        />
      </div>

      <!-- Model Name -->
      <div class="mb-4">
        <label for="model" class="block text-gray-700 font-medium mb-2"
          >Model Name</label
        >
        <input
          type="text"
          id="model"
          name="model"
          placeholder="e.g., Corolla"
          class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        />
      </div>

      <!-- Car Price -->
      <div class="mb-4">
        <label for="price" class="block text-gray-700 font-medium mb-2"
          >Car Price</label
        >
        <input
          type="number"
          id="price"
          name="price"
          placeholder="e.g., 25000"
          class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
          min="0"
          step="0.01"
        />
      </div>

      <!-- Image URL -->
      <div class="mb-6">
        <label for="image" class="block text-gray-700 font-medium mb-2"
          >Image URL</label
        >
        <input
          type="url"
          id="image"
          name="image"
          placeholder="https://example.com/car.jpg"
          class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          required
        />
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 text-white font-semibold py-3 rounded-lg hover:bg-blue-700 transition-colors cursor-pointer"
      >
        Submit
      </button>
    </form>
  </body>
</html>
